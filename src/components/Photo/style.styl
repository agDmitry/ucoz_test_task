.Photo {
  position: relative;
  cursor: pointer;
  width: 150px;
  height: 150px;
  transition-property: transform, box-shadow;
  transition-duration: $theme.transition-duration;

  &:hover {
    transform: translate(-3px, -3px);
    box-shadow: 5px 5px 5px 0px $theme.colors.grey['800'];
  }

  &__title {
    overflow: hidden;
    text-overflow: ellipsis;
    padding: $theme.spacings.sm;
    box-sizing: border-box;
    white-space: nowrap;
    position: absolute;
    bottom: 0;
    width: 100%;
    max-height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    color: white;

    &:hover {
      white-space: normal;
    }
  }

  &__thumbnail {
    width: 100%;
    height: 100%;
  }
}