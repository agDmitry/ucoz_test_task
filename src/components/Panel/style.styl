.Panel {
  height: 100%;
  display: flex;
  flex-direction: column;

  &__header {
    display: flex;
    height: 3rem;
    font-size: 2rem;
    line-height: 2rem;
    background-color: $theme.colors.brand['500'];
    color: $theme.colors.white;
    box-shadow: 0px 1px 2px 0px $theme.colors.grey['700'];
    z-index: 1;
    box-sizing: border-box;

    &-icon-container,
    &-go-back-btn {
      width: 3rem;
      padding: $theme.spacings.sm;
      box-sizing: border-box;
      text-align: center;
    }

    &-title-container {
      flex: 1;
      padding: $theme.spacings.sm;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }

    &-go-back-btn {
      cursor: pointer;

      &:hover {
        background-color: $theme.colors.brand['400'];
      }
    }
  }

  &__content {
    flex: 1;
    padding: $theme.spacings.md;
    overflow: auto;
    background-color: $theme.colors.grey['400'];
  }
}