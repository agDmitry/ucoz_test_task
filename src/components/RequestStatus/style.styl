.Request-Status {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 2;

  &__content-wrapper {
    text-align: center;
    color: $theme.colors.white;
  }

  &__state-icon {
    font-size: 5rem;
    margin-bottom: 2rem;
  }

  &__msg {
    font-size: 2rem;
  }
}